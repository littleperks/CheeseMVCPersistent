@model List<CheeseMVC.Models.CheeseCategory>

    <h1>@ViewBag.title</h1>

    <ul>
        @foreach (var category in Model)
        {
            <li>@category.Name</li>

        }
    </ul>

    @if (Model.Count == 0)
    {
        <p>Please select "Add" to create categories.</p>
    }

    <p><a asp-controller="Category" asp-action="Add">Add Category</a></p>


